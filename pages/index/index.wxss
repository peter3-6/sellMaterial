/*top  */

.decoration_top {
  height: 610rpx;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

/*遮罩  */

.dt_cm {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
}

.dt_back {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 0;
}

/*主体卡片  */

.card_price {
  padding-top: 70rpx;
}

/*卡片样式  */

.cpm_portrait {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  position: absolute;
  top: -50rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
}

/*主体  */

.cp_main {
  border-radius: 30rpx;
  padding: 140rpx 40rpx 60rpx;
}

.cpm_title {
  padding: 30rpx 0 40rpx;
}

.line_after {
  width: 496rpx;
  height: 1px;
  position: absolute;
  bottom: 0;
  margin: 0 auto;
  left: 0;
  right: 0;
}

/*内容  */

.cpm_content {
  min-height: 300rpx;
}

.cc_top {
  padding-top: 40rpx;
  min-height: 100rpx;
}

.cc_bottom {
  padding: 40rpx 0;
  font-size: 100rpx;
  color: #f45c33;
}

/*button  */

.cpm_button {
  height: 100rpx;
  border-radius: 100rpx;
}

/*底部 */

.cpm_bottom {
  padding: 30rpx 0;
  z-index: 1;
}

/*返回首页  */

.cpm_home {
  position: absolute;
  top: 10rpx;
  left: 40rpx;
}

.home_icon {
  width: 30rpx;
  margin-right: 10rpx;
}

/*背景  */

.cp_back {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: calc(100% - 610rpx);
  z-index: 0;
}

/*购买人数  */

.people_buy {
  padding: 2rpx 28rpx 2rpx 24rpx;
  border-radius: 100rpx;
  margin: 0 14rpx;
  font-style: oblique;
}

/*头像  */

.people_portrait {
  padding: 0 40rpx 60rpx;
}

.pp_main {
  width: calc(100% +6rpx);
}

.ppm_portrait {
  width: calc(10% - 6rpx);
  padding-top: calc(10% - 6rpx);
  border-radius: 50%;
  margin-left: 6rpx;
  margin-bottom: 6rpx;
}

.br_50 {
  border-radius: 50%;
}
